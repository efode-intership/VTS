<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.efode.vts.ScheduleDetailsActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cast_intro_overlay_button_background_color"
            android:padding="15dp"
            android:text="Schedule Details"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtScheduleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="Schedule ID: "
            android:textAlignment="viewStart"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDriverId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="Driver Id: "
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVehicleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="Vehicle Id: "
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtStartPointAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="Start Point Address: "
            android:textAlignment="viewStart"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEndPointAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="End Point Address: "
            android:textAlignment="viewStart"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtIntendStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="Intend Start Time: "
            android:textAlignment="viewStart"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtIntendEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="Intend End Time: "
            android:textAlignment="viewStart"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtScheduleStatusTypeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="10dp"
                android:text="Schedule Status: "
                android:textAlignment="viewStart"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgScheduleStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                app:srcCompat="@drawable/border" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_start_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="START JOURNEY" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
