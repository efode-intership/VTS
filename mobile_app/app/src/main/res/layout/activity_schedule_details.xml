<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.efode.vts.ScheduleDetailsActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtScheduleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Schedule ID: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDriverId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Driver Id: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVehicleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vehicle Id: "
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtStartPointAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Point Address: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEndPointAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End Point Address: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtIntendStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Intend Start Time: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtIntendEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Intend End Time: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtScheduleStatusTypeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Schedule Status Type Id: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLocationLatStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location Lat Start: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLocationLongStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location Long Start: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLocationLatEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location Lat End: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLocationLongEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location Long End: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDeviceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Device Id: "
            android:textStyle="bold" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
