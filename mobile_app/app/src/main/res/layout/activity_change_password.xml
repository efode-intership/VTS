<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgot_password.ChangePasswordActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight="0.29"
            android:gravity="center_vertical"
            android:text="ĐỔI MẬT KHẨU"
            android:textColor="@android:color/holo_blue_bright"
            android:textColorLink="@android:color/holo_blue_bright"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="30dp" />

        <TextView
            android:id="@+id/textview_changepass_warning"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.29"
            android:textColor="#c0392b"
            android:text="" />

        <EditText
            android:id="@+id/edittext_changepass_newpass"
            android:layout_width="300dp"
            android:layout_height="57dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.29"
            android:ems="10"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edittext_changepass_confirm"
            android:layout_width="300dp"
            android:layout_height="57dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.29"
            android:ems="10"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_changepass_done"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="35dp"
            android:text="Hoàn tất" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
