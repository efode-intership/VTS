<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.efode.vts.sign_in.forgot_password.VerificationActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textview_verifi_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Một đoạn mã sẽ được gửi về điện thoại của bạn, vui lòng xác minh"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittext_verifi_number"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Nhập mã xác minh"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button_verifi_done"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="35dp"
            android:text="Tiếp theo" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
