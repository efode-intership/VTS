<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.efode.vts.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#c0392b"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/warning" />
    <ImageView
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="40dp"
        app:layout_anchor="@id/fab_warning"
        app:layout_anchorGravity="start" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_call"
        app:backgroundTint="#34495e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/call" />
    <ImageView
        android:id="@+id/divider1"
        android:layout_width="1dp"
        android:layout_height="40dp"
        app:layout_anchor="@id/fab_call"
        app:layout_anchorGravity="end" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/schedule"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        android:visibility="invisible"
        app:backgroundTint="#16a085" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_finmylocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/location"
            android:layout_marginTop="70dp"
            android:visibility="visible"
            android:layout_marginRight="16dp"
            app:backgroundTint="#1abc9c"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:src="@drawable/completed"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="110dp"
            android:visibility="invisible"
            app:backgroundTint="#2980b9"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:src="@drawable/cancel"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="110dp"
            android:visibility="invisible"
            app:backgroundTint="#c0392b"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_findway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:src="@drawable/find"
            android:layout_marginBottom="80dp"
            android:visibility="invisible"
            app:backgroundTint="#e67e22"/>


    <include
        android:id="@+id/include_content"
        layout="@layout/content_main"/>

</android.support.design.widget.CoordinatorLayout>
